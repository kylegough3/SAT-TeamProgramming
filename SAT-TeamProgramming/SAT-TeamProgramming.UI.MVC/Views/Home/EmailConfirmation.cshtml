@{
    ViewData["Title"] = "Email Confirmation";
}
@model SAT_TeamProgramming.UI.MVC.Models.ContactViewModel
<main id="main">

    <div class="row">

        <div class="col-lg-12 my-5 text-center">

            <div class="info-box">
                <i class="bx bx-check-circle"></i>
                <h3>Message Sent!</h3>

                @*When referring to a SPECIFIC OBJECT passed to this View (like the cvm object we passed), use a captial M "Model".*@

                <p>
                    Thank you for contacting me! I will respond to your message using the provided email address, <strong>@Model.Email</strong>, in the next few days.
                </p>

                <br />

                <div class="offset-3 col-md-6 text-center">
                    <p>
                        You sent the following message on
                        @DateTime.Now.Date.ToShortDateString() at @DateTime.Now.ToShortTimeString()
                    </p>
                </div>

                <br />

                <div class="offset-3 col-md-6">
                    <p>
                        <em>@Model.Message</em>
                    </p>
                </div>

            </div>

        </div>

    </div>
</main>